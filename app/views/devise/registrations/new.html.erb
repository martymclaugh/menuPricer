<div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    		<h3 class="panel-title">Please sign up for menuPricer <small>It's free!</small></h3>
			 			</div>
			 			<div class="panel-body">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <div class="field">
                  <%= f.label :name %><br />
                  <%= f.text_field :name, class: 'form-control input-sm' %>
                </div><br />

                <div class="field">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, class: 'form-control input-sm' %>
                </div><br />
                <div class="row">
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
                      <div class="field">
                        <small><%= f.label :password %><br />
                        <% if @minimum_password_length %>
                        <em><small>(<%= @minimum_password_length %> characters minimum)</small></em>
                        <% end %></small><br />
                        <%= f.password_field :password, autocomplete: "off", class: 'form-control input-sm' %>
                      </div>
			    					</div>
			    				</div>
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
                      <div class="field">
                        <small><%= f.label :password_confirmation %></small><br /><br />
                        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-sm' %>
                      </div>
			    					</div>
			    				</div>
			    			</div>
                <div class="actions">
                  <%= f.submit "Sign up", class: 'btn btn-info btn-block', method: :post%>
                </div><br />
                <% end %>
              <%= render "devise/shared/links" %>
			    	</div>
	    		</div>
    		</div>
    	</div>
    </div>
